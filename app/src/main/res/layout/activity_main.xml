<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dvjalexpablo.cronometro.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:weightSum="1">



        <TextView
            android:id="@+id/txtcrono"
            android:layout_width="270dp"
            android:layout_height="255dp"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:background="@drawable/txt_circle"
            android:textAlignment="gravity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vuelta :"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtvuelta"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv_vueltas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/edit_vueltas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/negro"
                android:textSize="20dp" />

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <Button
                android:id="@+id/btnvuelta"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_cicle"
                android:text="VUELTA" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <Button
                android:id="@+id/btninipaus"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_cicle"
                android:text="INICIAR" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp">

            <Button
                android:id="@+id/btndetener"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_cicle"
                android:text="DETENER" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
